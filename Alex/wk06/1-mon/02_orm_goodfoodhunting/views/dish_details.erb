<h1><%= name %></h1>
<img src="<%= image_url %>" alt="Picture of '<%= name %>' dish" style="width:100px;">

<!-- <form action="/dishes/<%= @dish['id'] %>" method="delete"> -->
<form action="/dishes/<%= @dish['id'] %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button>delete</button>
</form>

<a href="/dishes/<%= @dish['id'] %>/edit">edit</a>

<p>posted by <%= @dish.user.email %></p>

<!-- <p><%= Like.where(dish_id: @dish.id).count %> likes</p> -->
<p><%= @dish.likes.count %> likes</p>

<% if logged_in? %>
<form action="/likes" method="post">
  <input type="hidden" name="dish_id" value="<%= @dish.id %>">
  <button>like</button>
</form>
<% end %>

<% if @comments %>
  <section class="comments">
    <h2>Comments</h2>
    <% @comments.each do |comment| %>
      <p><%= comment.content %><span> by <%= comment.user.email %></span></p>
    <% end %>
  </section>
<% end %>
